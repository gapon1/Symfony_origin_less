{% extends 'base.html.twig' %}


{% block body %}
    <table class="table table-striped">
        <thead>
        <tr>
            <th>Genus</th>
            <th># of species</th>
            <th>Fun Fact</th>
            <th>Family</th>
            <th>Updated</th>
        </tr>
        </thead>

        <tbody>

        {% for genus in genuses %}

        <tr>
            <td>
            <a href="{{ path('genus_show', {'genusName': genus.name })  }}"> {{ genus.name }}</a>
            </td>
            <td>{{ genus.specCount }}</td>
            <td>{{ genus.funFact }}</td>
            <td>{{ genus.subFamily }}</td>
            <td>{{ genus.updated|date('Y-m-d') }}</td>
        </tr>
        {% endfor %}


        </tbody>



    </table>


{% endblock %}
