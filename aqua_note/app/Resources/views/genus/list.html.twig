{% extends 'base.html.twig' %}


{% block body %}
    <table class="table table-striped">
        <thead>
        <tr>
            <th>Genus</th>
            <th># of species</th>
            <th>Fun Fact</th>
            <th>Updated</th>
        </tr>
        </thead>

        <tbody>
        {% for genus in genuses %}

        <tr>
            <td>{{ genus.name }}</td>
            <td>{{ genus.specCount }}</td>
            <td>{{ genus.funFact }}</td>
            <td>{{ genus.updated|date('Y-m-d') }}</td>
        </tr>
        {% endfor %}


        </tbody>



    </table>


{% endblock %}
